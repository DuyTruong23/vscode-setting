{
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": false,
  "editor.fontFamily": "Fira Code, Consolas, 'Roboto Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorWidth": 3,
  "editor.cursorBlinking": "expand",
  "editor.wordWrapColumn": 90,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.indentation": false,
  "editor.guides.bracketPairs": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Aura Soft Dark",
  "workbench.list.smoothScrolling": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": true,
  "git.autofetch": true,
   "editor.letterSpacing": 0.3,
  "editor.lineHeight": 23,
  "cSpell.language": "en,vi",
  "indentRainbow.colors": [
    "rgba(247, 37, 133,0.07)",
    "rgba(181, 23, 158,0.07)",
    "rgba(114, 9, 183,0.07)",
    "rgba(86, 11, 173,0.07)",
    "rgba(72, 12, 168,0.07)",
    "rgba(58, 12, 163,0.07)",
    "rgba(63, 55, 201,0.07)",
    "rgba(67, 97, 238,0.07)",
    "rgba(72, 149, 239,0.07)",
    "rgba(76, 201, 240,0.07)"
  ],
  "indentRainbow.ignoreLinePatterns": ["/[ \t]* [*]/g", "/[ \t]+[/]{2}/g"],
  "indentRainbow.errorColor": "rgba(rgba(255, 0, 0, 0.4)",
  "window.closeWhenEmpty": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
}
