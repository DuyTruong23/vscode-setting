{
  "cSpell.language": "en,vi",
  "breadcrumbs.enabled": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "Fira Code, Roboto Mono, monospace",
  "editor.fontFamily": "Fira Code, Roboto Mono, monospace",
  "editor.codeLensFontFamily": "Fira Code, Roboto Mono, monospace",
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 20,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.cursorSmoothCaretAnimation": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 5000,
  "files.trimTrailingWhitespace": true,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.letterSpacing": 0.5,
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 3,
  "editor.lineNumbers": "on",
  "editor.hover.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": true,
  "javascript.preferences.quoteStyle": "single",
  "html.format.wrapAttributesIndentSize": 2,
  "html.format.templating": true,
  "javascript.format.insertSpaceAfterCommaDelimiter": true,
  "javascript.format.semicolons": "insert",
  "window.closeWhenEmpty": true,
  "window.autoDetectColorScheme": true,
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredLightColorTheme": "Visual Studio Light",
  "workbench.preferredDarkColorTheme": "Dracula Soft",
  "workbench.colorTheme": "Visual Studio Light",
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "htmltagwrap.autoDeselectClosingTag": true,
  "htmltagwrap.tag": "p"
}
