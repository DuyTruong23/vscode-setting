{
  //Editor
  "eslint.alwaysShowStatus": true,
  "htmlhint.enable": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "workbench.tree.renderIndentGuides": "none",
  //Beautify
  "beautify.ignore": ["*/test.js", "**/spec/*", "**/test/**/*"],
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "scss"],
    "html": ["html", "php", "erb", "htm"]
  },
  //Bettercomments
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#ff5370",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#eeffff",
      "bold": true,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#82aaff",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#444267",
      "bold": true,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#c3e88d",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    }
  ],
  //Theme
  "workbench.colorCustomizations": {
    "terminal.foreground": "#8d8f92",
    "terminal.ansiBlack": "#231F20",
    "terminal.ansiBlue": "#92ffff",
    "terminal.ansiCyan": "#ff80bf",
    "terminal.ansiGreen": "#61FFCA",
    "terminal.ansiMagenta": "#9580ff",
    "terminal.ansiRed": "#ff9580",
    "terminal.ansiWhite": "#8d8f92",
    "terminal.ansiYellow": "#ffff80"
  },
  "editor.tokenColorCustomizations": {},
  "editor.linkedEditing": true,
  "editor.inlineSuggest.enabled": true,
  //HirachiVantara
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "typescript.validate.enable": false,
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.activityBar.visible": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  "eslint.format.enable": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.tree.indent": 4,
  "diffEditor.ignoreTrimWhitespace": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "workbench.startupEditor": "none"
}
