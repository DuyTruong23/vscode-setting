{
  // Format settings
  "workbench.iconTheme": "material-icon-theme", // icon theme
  "editor.mouseWheelZoom": true,
  "editor.fontFamily": "JetBrains Mono, Fira Code", //font chu
  "editor.fontLigatures": true, // nối liền nét
  "editor.tabSize": 2, // mỗi tab tương đương 2 cách
  "editor.wordWrap": "on",
  "emmet.triggerExpansionOnTab": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.wordWrapColumn": 100, // độ dài hiển thị kí tự 1 dòng
  "editor.lineHeight": 21, //giản cách dộ cao hàng hàng
  "editor.letterSpacing": 0.5, //giản cách kí tự
  "files.trimTrailingWhitespace": true,
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "solid", //con tro nhap nhay
  "explorer.confirmDelete": false, // xác nhận xoá
  "editor.suggestSelection": "first",
  "explorer.confirmDragAndDrop": false,
  "files.autoSaveDelay": 5000,
  "editor.renderLineHighlight": "none",
  "eslint.format.enable": true, //eslin format
  "eslint.packageManager": "yarn",
  "editor.formatOnSave": true, //tự động format khi save
  "editor.cursorSmoothCaretAnimation": true, //làm con trỏ mượt hơn
  "editor.suggest.preview": true,
  "color-highlight.markerType": "underline",
  "workbench.startupEditor": "none",
  //"workbench.startupEditor": "newUntitledFile",
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.linkedEditing": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "git.enableSmartCommit": true,
  "editor.guides.bracketPairs": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "[html]": {
    "editor.matchBrackets": "never"
    //"editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.matchBrackets": "never"
    //"editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.alwaysShowStatus": true,
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.minimap.enabled": false, // ẩn minimap bên phải man hình
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.associations": {
    "*.json": "jsonc"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "html-css-class-completion.enableEmmetSupport": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html"
  },
  "editor.snippetSuggestions": "top",
  "editor.guides.bracketPairsHorizontal": "active",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.language.brackets": [
      ["[", "]"],
      ["(", ")"]
    ],
    "editor.language.colorizedBracketPairs": [["[", "]"]]
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {
    "**/.history": true,
    "**/.next": true
  },
  "emmet.showExpandedAbbreviation": "always",
  // "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",
  "editor.minimap.renderCharacters": false,
  "editor.fontSize": 13,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "debug.console.fontSize": 14,
  "liveServer.settings.donotVerifyTags": true,
  "terminal.integrated.lineHeight": 1.3,
  "workbench.editor.untitled.hint": "hidden",
  "terminal.integrated.fontSize": 13,
  "indentRainbow.colors": [
    "rgba(247, 37, 133,0.07)",
    "rgba(181, 23, 158,0.07)",
    "rgba(114, 9, 183,0.07)",
    "rgba(86, 11, 173,0.07)",
    "rgba(72, 12, 168,0.07)",
    "rgba(58, 12, 163,0.07)",
    "rgba(63, 55, 201,0.07)",
    "rgba(67, 97, 238,0.07)",
    "rgba(72, 149, 239,0.07)",
    "rgba(76, 201, 240,0.07)"
  ],
  "indentRainbow.errorColor": "rgba(208,0,0,0.6)",
  "workbench.colorTheme": "Dracula Custom",
  "window.autoDetectColorScheme": true
  // "workbench.preferredLightColorTheme": "Stackoverflow",
  // "workbench.preferredDarkColorTheme": "Dracula Custom"
}
