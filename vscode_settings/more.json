{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript, javascriptreact, typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json, jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "html.format.wrapAttributesIndentSize": 2,
  "html.format.templating": true,
  "javascript.format.insertSpaceAfterCommaDelimiter": true,
  "javascript.format.semicolons": "insert",
  "security.workspace.trust.banner": "never",
  "cSpell.diagnosticLevel": "Hint",
  "files.associations": {
    "*.json": "jsonc"
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.lineNumbers": "on",
  "editor.codeLens": true,
  "editor.hover.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.renderLineHighlight": "all",
  "explorer.compactFolders": false,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/*.js": { "when": "$(basename).ts" }
  },
  "editor.guides.indentation": false,
  "workbench.tree.renderIndentGuides": "none",
  "liveServer.settings.donotShowInfoMsg": true,
  "window.menuBarVisibility": "compact",
  "beautify.language": {
    "js": {
      "type": ["javascript", "json"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "scss"],
    "html": ["htm", "html"]
  },
  "beautify.ignore": ["*/test.js", "**/spec/*", "**/test/**/*"],
  "htmltagwrap.autoDeselectClosingTag": true,
  // Add on
  "atlascode.jira.jqlList": [
    {
      "id": "32f02d69-b404-4d5a-af19-25944d6c391a",
      "enabled": true,
      "name": "My duytruong23 Issues",
      "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
      "siteId": "45dc59b0-e734-4bdd-a6cf-cc3602a32eb6",
      "monitor": true
    }
  ],
  "yaml.schemas": {
    "file:///c%3A/Users/truon/.vscode/extensions/atlassian.atlascode-2.10.11/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  "redhat.telemetry.enabled": true,
  "atlascode.helpExplorerEnabled": false,
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "prettier.eslintIntegration": true
}
